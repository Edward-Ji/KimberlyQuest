<LoginField>:
    orientation: "vertical"
    spacing: 16
    size_hint_y: None
    height: self.minimum_height

    BoxLayout:
        size_hint: .6, None
        height: 45
        pos_hint: {"center_x": .5}

        MainLabel:
            size_hint: None, 1
            width: 120
            text: "Username"
            color: orange
        MainInput:
            id: usr_input
            allowed_pat: r"\S+"
            allowed_len: 20
            focus: True

            text: "PSmith1"

    BoxLayout:
        size_hint: .6, None
        height: 45
        pos_hint: {"center_x": .5}

        MainLabel:
            size_hint: None, 1
            width: 120
            text: "Password"
            color: orange
        PasswordInput:
            id: psw_input

            text: "123456"

        PasswordEye:
            on_state: psw_input.password = self.state == "normal"

    MainButton:
        text: "Login"
        pos_hint: {"center_x": .5}
        on_release: root.login()

    MainButton:
        text: "Register"
        pos_hint: {"center_x": .5}
        on_release: root.register()

<LoginScreen@Screen>:
    name: "login"

    on_pre_enter: cruise_ship.play()

    RelativeLayout:

        CruiseImage:
            id: cruise_ship
            source: "res/cruise_ship.png"
            size: self.texture_size

    BoxLayout:
        orientation: "vertical"
        padding: 3
        spacing: 32
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {"center_x": .5, "center_y": .5}

        Label:
            markup: True
            font_size: "42dp"
            text: "[b][color=#808080]Kimberley [color=#ff9900]Quest[/b]"
            size_hint_y: None
            height: self.texture_size[1] + 12

        LoginField: