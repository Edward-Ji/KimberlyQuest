#:set white 1, 1, 1, 1
#:set grey_light .8, .8, .8, 1
#:set grey .4, .4, .4, 1
#:set grey_down .4, .4, .4, .8
#:set grey_dark .1, .1, .1, 1
#:set grey_trans 0, 0, 0, .7
#:set orange 1, .45, .1, 1
#:set orange_down 1, .45, .1, .9
#:set orange_trans 1, .45, .1, .5
#:set transparent 0, 0, 0, 0

<MainBanner@BoxLayout>:
    color: .4, .4, .4, 1
    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            size: root.width, self.height
            pos: self.pos

    size_hint: 1, None
    height: self.minimum_height
    padding: 15
    spacing: 10

    Image:
        size_hint_x: None
        width: self.height
        source: "res/icon.png"

<MainLabel>:
    font_size: "21dp"
    color: grey
    size_hint: None, None
    size: self.texture_size

<AlignLabel@MainLabel>:
    padding: 10, 10
    text_size: self.size
    halign: "left"
    valign: "center"
    size_hint_x: 1

<MainHeading@AlignLabel>:
    heading: ''
    markup: True
    text: "[b]" + self.heading + "[/b]"
    halign: "center"
    font_size: "35dp"
    color: white

<HeadingButton>:
    name: ''
    size_hint_x: None
    width: self.height
    background_normal: "res/" + self.name + "_btn_normal.png"
    background_down: "res/" + self.name + "_btn_down.png"

<MainButton>:
    color_normal: orange
    color_down: orange_down
    background_color: self.color_normal if self.state == "normal" else self.color_down
    background_down: ''
    background_normal: ''
    size_hint: None, None
    size: tuple(map(lambda x: x + 24, self.texture_size))
    font_size: "21dp"
    color: white

<MainInput>:
    allowed_pat: r"."
    allowed_len: 24

    write_tab: False
    multiline: False
    font_size: "24dp"
    foreground_color: white
    background_color: grey
    selection_color: orange_trans
    cursor_color: orange
    disabled_foreground_color: grey_light
    size_hint_y: None
    height: 42

<PasswordInput@MainInput>:
    allowed_pat: r"\S"
    password: True

<PasswordEye>:
    size_hint: None, None
    size: 35, 35
    background_normal: "res/password_eye_normal.png"
    background_down: "res/password_eye_down.png"

<PopupCloseButton@Button>:
    size_hint: None, None
    size: 30, 30
    background_normal: "res/close_btn_normal.png"
    background_down: "res/close_btn_down.png"

<Popup>:
    separator_color: orange
    title_size: 21
    size_hint: .5, .45
    auto_dismiss: True

<MainPopup>:

    BoxLayout:
        orientation: "vertical"

        RelativeLayout:
            size_hint: 0, 0
            PopupCloseButton:
                center: root.width - 35, 35
                on_release: root.dismiss()

<SelectionPopup>:
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"

        MainLabel:
            padding: 10, 10
            text_size: root.width, None
            size: self.texture_size
            size_hint: 1, 1
            text: root.message
            color: grey_light

        BoxLayout:
            id: choice_box
            padding: 15
            spacing: 24
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {"center_x": .5}

<MessagePopup>:
    opacity: 1
    size_hint: None, None
    size: 0, 0
    pos_hint: {"center_x": .5, "center_y": .15}
    border: 0, 0, 0, 0
    background_color: 0, 0, 0, 0
    title_size: "0dp"
    separator_height: "0dp"
    auto_dismiss: False

    MainLabel:
        id: label
        canvas.before:
            Color:
                rgba: grey_trans
            Rectangle:
                size: self.size
                pos: self.pos
        center_x: root.center_x
        text: root.message
        color: white

<MainScrollView@ScrollView>:
    do_scroll_x: False
    do_scroll_y: True
    bar_color: orange
    bar_inactive_color: orange_trans
    bar_width: 5