<MainButton@Button>:
    font_size: "24dp"
    color: white
    background_color: orange if self.state == "normal" else orange_down
    background_down: ''
    background_normal: ''
    size_hint: None, None
    size: tuple(map(lambda x: x + 24, self.texture_size))

<MainInput@TextInput>:
    allowed_pat: r"."
    allowed_len: 99

    write_tab: False
    multiline: False
    font_size: "24dp"
    foreground_color: white
    background_color: grey
    selection_color: orange_trans
    cursor_color: orange
    size_hint_y: None
    height: 42

<PasswordInput@MainInput>:
    password: True

